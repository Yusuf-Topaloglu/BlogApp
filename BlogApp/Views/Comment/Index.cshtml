@model List<BlogApp.Models.Comment>

@{
    var postId = ViewBag.PostId;
    ViewData["Title"] = "Yorumlar";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>💬 Yorumlar</h2>
        <a asp-action="Create" asp-route-postId="@postId" class="btn btn-primary">
            ➕ Yeni Yorum
        </a>
    </div>

    @if (Model.Any())
    {
        @foreach (var comment in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <p class="card-text">@comment.Text</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            📝 Yorum ID: @comment.Id
                        </small>
                        <small class="text-muted">
                            🔗 Post ID: @comment.PostId
                        </small>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            📭 Bu gönderiye henüz yorum yapılmamış.
        </div>
    }

    <div class="mt-3">
        <a asp-controller="Post" asp-action="Details" asp-route-id="@postId"
           class="btn btn-secondary">← Gönderiye Dön</a>
    </div>
</div>