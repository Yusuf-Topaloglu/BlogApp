@model BlogApp.Models.Comment

@{
    ViewData["Title"] = "Yorum Ekle";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-body">
            <h2 class="card-title mb-4">💬 Yorum Ekle</h2>

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="PostId" />

                <div class="form-group mb-4">
                    <label asp-for="Text" class="form-label fw-bold">Yorumunuz:</label>
                    <textarea asp-for="Text" class="form-control" rows="5" required></textarea>
                </div>

                <div class="d-flex gap-2 flex-wrap">
                    <button type="submit" class="btn btn-success px-4">📤 Yorumu Gönder</button>
                    <a asp-controller="Post" asp-action="Index" class="btn btn-secondary px-4">↩️ İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>