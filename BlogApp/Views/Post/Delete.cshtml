@model BlogApp.Models.Post

<div class="container mt-4">
    <h2 class="text-danger mb-4">🗑️ Gönderiyi Sil</h2>

    <div class="alert alert-warning">
        <h5>Emin misiniz?</h5>
        <p><strong>@Model.Title</strong> başlıklı gönderiyi silmek üzeresiniz.</p>
        <p class="mb-0">Bu işlem geri alınamaz!</p>
    </div>

    <!-- Gönderi Bilgileri -->
    <div class="card mb-4">
        <div class="card-body">
            <h5>@Model.Title</h5>
            <p>@Model.Content</p>
            <small class="text-muted">
                📅 @Model.CreateDate.ToString("dd.MM.yyyy HH:mm") |
                💬 @(Model.Comments?.Count ?? 0) yorum
            </small>
        </div>
    </div>

    <!-- FORM ACTION'INI "Delete" YAP -->
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">✅ Evet, Sil</button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-success">❌ Hayır, İptal</a>
        </div>
    </form>
</div>